# Providence Tennis Academy - Backend Environment Variables
# Copy this file to .env and fill in your actual values

# === SERVER CONFIGURATION ===
PORT=8080
# DATA_DIR=backend/data  # Optional, defaults to backend/data

# === AUTHENTICATION ===
JWT_SECRET=your-super-secure-jwt-secret-key-here
SESSION_SECRET=your-super-secure-session-secret-here

# === EMAIL CONFIGURATION (Required for auth) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=noreply@providencetennis.com

# === STRIPE PAYMENT CONFIGURATION (Required for payments) ===
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# === GOOGLE AI CONFIGURATION ===
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_GENAI_USE_VERTEXAI=false
GOOGLE_GENAI_MODEL=gemini-3-flash-preview

# === FRONTEND URL (For email links) ===
FRONTEND_URL=http://localhost:3009